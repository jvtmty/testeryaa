// NO BUTTON KABUR
const noBtn = document.getElementById("noBtn");
if (noBtn) {
  noBtn.addEventListener("mouseover", () => {
    noBtn.style.left = Math.random() * 300 + "px";
    noBtn.style.top = Math.random() * 300 + "px";
  });
}

